package com.astek.framework;

/**
 * 
 * Muzik ve Ses dosyalarini arka planda oynatmak icin ana arayuz
 * 
 * @author Musa Cavus
 * @version 1.0
 */

public interface Audio {

	/**
	 * 
	 * Muzik oynatabilmek icin yeni bir Music sinifi olusturuluyor.
	 * 
	 * @param fileName
	 *            Okunacak dosyanin adi.
	 * 
	 * @return Music olarak okunan deger iletilmektedýr.
	 */
	public Music newMusic(String filename);

	/**
	 * 
	 * Ses oynatabilmek icin yeni bir Sound sinifi olusturuluyor.
	 * 
	 * @param fileName
	 *            Okunacak dosyanin adi.
	 * 
	 * @return Sound olarak okunan deger iletilmektedýr.
	 */
	public Sound newSound(String filename);
}
